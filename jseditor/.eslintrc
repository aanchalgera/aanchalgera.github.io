{
    "rules": {
        "indent": [
            2,
            2,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "globals": {
        "Rollbar": true,
        "cloudinary": true,
        "SimpleMDE": true,
        "Firebase": true,
        "configParams": true
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
	"modules": true, 
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ]
}
