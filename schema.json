schema: {
  "type": "object",
  "title": "Post",
  "properties": {
    "post_title": {
        "type": "string",
        "minLength": 4,
        "maxLength": 300,
        "description": "upto 300 characters",
        "default": "",
        "title": "Title"
    },
    "alternate_title": {
        "type": "string",
        "minLength": 4,
        "maxLength": 300,
        "description": "upto 300 characters",
        "default": "",
        "title": "Alternate Title"
    },
    "post_content": {
      "type": "array",
      "title": "Post Content",
      "items": {
        "title": "Widget",
        "oneOf": [
          {
            "$ref": "text.json",
            "title": "Text"
          },
          {
            "$ref": "video.json",
            "title": "Video"
          },
          {
            "$ref": "table.json",
            "title": "Table"
          },
          {
            "$ref": "image.json",
            "title": "Image"
          },
          {
            "$ref": "slideshow.json",
            "title": "Slideshow"
          }
        ]
      }
    }
  }
}
