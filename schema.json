schema: {
  "type": "object",
  "title": "Post",
  "properties": {
    "post_title": {
        "type": "string",
        "minLength": 4,
        "maxLength": 300,
        "description": "upto 300 characters",
        "default": "",
        "title": "Title"
    },
    "alternate_title": {
        "type": "string",
        "minLength": 4,
        "maxLength": 300,
        "description": "upto 300 characters",
        "default": "",
        "title": "Alternate Title"
    },
    "post_content": {
      "type": "object",
      "title": "Post Content",
      "properties": {
        "type": {
          "type": "string",
          "title": "Widgets",
          "enum": [
            "video",
            "text",
            "table",
            "image",
            "slideshow"
          ],
          "default": "text"
        }
      }
    }
  }
}